{
  "name": "screensheet",
  "productName": "Screensheet",
  "version": "1.3.0",
  "description": "An application built with Node.js and Electron allowing you to use your device from anywhere with remote desktop!",
  "main": "index.js",
  "scripts": {
    "start": "npx electron .",
    "pack": "npx electron-builder --dir",
    "dist": "npx electron-builder",
    "build:css": "npx tailwindcss -o ./public/output.css --content ./public/**/*.html --config ./tailwind.config.js --minify && npx tailwindcss -o ./app/output.css --content ./app/**/*.html --config ./tailwind.config.js --minify"
  },
  "author": {
    "name": "Brian Walczak",
    "email": "me@brian.re"
  },
  "license": "Apache-2.0",
  "build": {
    "appId": "com.brianwalczak.screensheet",
    "icon": "public/logo.png",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/logo.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "publish": null,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "perMachine": false,
      "runAfterFinish": true
    }
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.1.14"
  },
  "pnpm": {
    "allowedBuiltDependencies": [
      "electron"
    ]
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "bcryptjs": "^3.0.2",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.3"
  }
}
